@model IEnumerable<asp.net_mvc_video_rental_store.Core.ViewModels.MovieViewModel>
@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>

@if (!Model.Any())
{
    <p>We don't have any movies yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

